.row
  .small-12.columns
    %h3 Sign in

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .row
    .small-6.columns
      .row
        = f.input :email, input_html: {autofocus: true}, placeholder: "test@te.st"
      .row
        = f.input :password, placeholder: "testing1"

      - if devise_mapping.rememberable?
        .row
          = f.check_box :remember_me
          = f.label  :remember_me, "Remember Me"
      .row
        = f.submit "Sign in", class: "button"

-# = render "devise/shared/links"
.row= link_to "Sign up", new_registration_path(resource_name)
%br
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  .row= link_to "Forgot your password?", new_password_path(resource_name)
