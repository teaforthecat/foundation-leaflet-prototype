-# requires local vars: modal_id, src
%a.button{href: '#', data: {'reveal-id' => 'ensMap', reveal: true}}
  = link_text
.reveal-modal.xlarge{id: 'ensMap',
  data: {reveal: true}, style: 'height: 100%;'}
  .close-reveal-modal!= '&#215;'
  %iframe#leaflet-map{src: src,
    width: '100%',
    height: '100%',
    frameborder: 0,
    scrolling: 'no',
    marginheight: 0,
    marginwidth:  0}
