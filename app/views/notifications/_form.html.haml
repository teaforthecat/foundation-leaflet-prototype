= simple_form_for(@notification) do |f|
  = f.error_notification
  .row
    .medium-6.columns
      .row
        = f.input :dcm_topic_id, label: "DCM Topics",
          as: :select, collection: @dcm_topics
      .row
        = f.input :e911s, label: "e911 Subscriber List",
          as: :select, collection: @current_user.account.e911s,
          input_html: {multiple: true}
      .row
        = label_tag :city, "City:"
        = text_field_tag :city
        %a.map.button{'data-request' => 'iframe-map'}= 'Map'
        .ens-map-editor
          %iframe#leaflet-map{src: new_geo_path,
            width: 425,
            height: 350,
            frameborder: 0,
            scrolling: 'no',
            marginheight: 0,
            marginwidth:  0}

    .medium-6.columns
      .ens-message-editor
        = f.input_field :message, as: :text, class: 'ckeditor'

  .form-actions
    = f.button :submit, "Send"
